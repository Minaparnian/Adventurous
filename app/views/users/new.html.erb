
<%= image_tag '951820009082492817.jpg', :class => 'home-img' %>
<nav class="nav-sign">
  <!-- <%= link_to 'Home', images_path %> -->

  <% if @current_user.present? %>
    <%= link_to "Edit profile", edit_user_path(@current_user) %>
    <%= link_to "Sign out #{ @current_user.name }", login_path, :method => 'delete' %>
  <% else %>
    <!-- <%= link_to 'Sign up', new_user_path %> -->
    <%= link_to 'Sign in', login_path %>
  <% end %>
</nav>
<div class="sign-container">
<h1>Adventurous</h1>
<div class = "table">
<% if @user.errors.any? %>
<ol>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ol>
<% end %>

<%= form_for @user do |f| %>
<fieldset>
  <%=  f.text_field :name, :placeholder => 'Name', :required => 'true' %>
</fieldset>

<fieldset>
  <%= f.email_field :email, :placeholder => 'Email', :required => 'true'%>
</fieldset>

<fieldset>
  <%= f.password_field :password, :placeholder => 'Password'%>
</fieldset>

<fieldset>
  <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password'  %>
</fieldset>

</div>
<div class="submit">
<fieldset>
<%= f.submit "Sign Up" %>
</fieldset>
<% end %>
</div>
</div>
