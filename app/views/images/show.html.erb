
<div id ="container">
  <div id = "main">
<%= link_to image_tag(@image.image, :class => 'main_img'), images_path %>
  </div><!--main-->


     <div id ="aside">
<h1><%= @image.name %></h1>
<h4>History:<%= @image.history %></h4>
<h4>Location:<%= @image.location %></h4>
<%= link_to "Delete", image_path, :method => 'delete' %>
<%= link_to "Edit", edit_image_path %>

     </div><!--aside-->

   <div class="comment">
     <% @image.comments.each do |comment|%>
     <p><%= comment.content %></p>
   </div><!--comment-->
      <% end %>
     <%= form_for Comment.new do |f| %>
     <%= f.label :content %>
     <%= f.text_area :content %>
     <%= hidden_field_tag :image_id, @image.id %>
     <%= f.submit %>
     <% end %>



</div><!--container-->
